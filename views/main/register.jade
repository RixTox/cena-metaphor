.register.container
    .row-fluid
        .span12
          .span6
            .area
              form.form-horizontal
                .heading
                  h2.form-heading.text-center
                    | Sign Up
                .control-group
                  label.control-label(for='inputUser') Username
                  .controls
                    input#inputUser(type='text', placeholder='E.g. ashwinhegde')
                .control-group
                  label.control-label(for='inputPassword') Password
                  .controls
                    input#inputPassword(type='password', placeholder='Min. 8 Characters')
                .control-group
                  label.control-label(for='inputCompanyName') Department
                  .controls
                    select#inputDepartment(name='inputDepartment')
                      option(value='dp', selected='selected') DP
                      option(value='alevel') A-level
                      option(value='ify') IFY
                      option(value='myp') MYP
                      option(value='pyp') PYP
                      option(value='national-primary') National Primary School
                      option(value='national-junior') National Junior High School
                      option(value='national-senior') National Senior High School
                .control-group
                  label.control-label(for='inputFirst') First Name
                  .controls
                    input#inputFirst(type='text', placeholder='E.g. Ashwin; Xiaoming')
                .control-group
                  label.control-label(for='inputLast') Last Name
                  .controls
                    input#inputLast(type='text', placeholder='E.g. Hegde; Wang')
                .control-group
                  label.control-label(for='inputEmail') Email
                  .controls
                    input#inputEmail(type='email', placeholder='E.g. ashwinh@cybage.com')
                .control-group
                  .controls
                    label.checkbox
                      input(type='checkbox')
                      | I agree all your
                      a(href='#') Terms of Services
                    button.btn.btn-success(type='submit') Sign Up
                .alert.alert-info
                  button.close(type='button', data-dismiss='alert') ×
                  strong Confirmation:
                  | A confirmation email has been sent to your email.
                  br
                  | Thank you for your registration.
          .span6
            .area
              form.form-horizontal
                .heading
                  h2.form-heading.text-center
                    | Sign In
                .control-group
                  label.control-label(for='inputUsername') Username
                  .controls
                    input#inputUsername(type='text', placeholder='E.g. ashwinhegde')
                .control-group
                  label.control-label(for='inputPassword') Password
                  .controls
                    input#inputPassword(type='password', placeholder='Min. 8 Characters')
                .control-group
                  .controls
                    label.checkbox
                      input(type='checkbox')
                      | Keep me signed in |
                      a(href='#') Forgot my password
                    button.btn.btn-success(type='submit') Sign In
                  .controls
                .alert.alert-error
                  button.close(type='button', data-dismiss='alert') ×
                  strong Access Denied!
                  | Please provide valid authorization.
