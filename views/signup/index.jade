extends ../layouts/default

block head
  title Sign Up - #{site.name}

block body
  .row.padtop
    .span6
      form#sign-in.form-horizontal(method="post", action="/login")
        legend Sign In
        p Already signed up? Login here.
        .control-group
          label.control-label(for="log-username") Username
          .controls
            input#log-username(type="text", name="username", placeholder="Username")
        .control-group
          label.control-label(for="log-password") Password
          .controls
            input#log-password(type="password", name="password", placeholder="Password")
        .control-group
          .controls
            button.btn.btn-primary(type="submit") Sign In
    .span6
      form#sign-up.form-horizontal(method="post", action="/signup")
        legend Sign Up
        .control-group
          label.control-label(for="reg-username") Username
          .controls
            input#reg-username(type="text", name="username", placeholder="Username")
        .control-group
          label.control-label(for="reg-password") Password
          .controls
            input#reg-password(type="password", name="password", placeholder="Password")
        .control-group
          label.control-label(for="reg-email") Email
          .controls
            input#reg-email(type="email", name="email", placeholder="Email")
        .control-group
          label.control-label(for="reg-display-name") Display Name
          .controls
            input#reg-display-name(type="text", name="info[displayName]", placeholder="Display Name")
        .control-group
          label.control-label(for="reg-first-name") First Name
          .controls
            input#reg-first-name(type="text", name="info[firstName]", placeholder="First Name")
        .control-group
          label.control-label(for="reg-last-name") Last Name
          .controls
            input#reg-last-name(type="text", name="info[lastName]", placeholder="Last Name")
        .control-group
          label.control-label(for="reg-mentor") Mentor
          .controls
            input#reg-mentor(type="text", name="info[mentor]", placeholder="Mentor")
        .control-group
          label.control-label(for="reg-department") Department
          .controls
            select#reg-department(name="info[department]", placeholder="Department")
              each str, val in info.departments
                option(value=val)= str
        .control-group
          label.control-label(for="reg-grade") Grade
          .controls
            input#reg-grade(type="text", name="info[grade]", placeholder="Grade")
        .control-group
          label.control-label(for="reg-class") Class
          .controls
            input#reg-class(type="text", name="info[class]", placeholder="Class")
        .control-group
          .controls
            button.btn.btn-primary(type="submit") Sign Up