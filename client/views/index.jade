extends layouts/default

block head
  link(rel='stylesheet', href='styles/gh-fork-ribbon.css')
  //if IE
    link(rel='stylesheet', href='styles/gh-fork-ribbon.ie.css')

block body
  script#tmpl-line(type='text/x-underscore')
    li.card-item
      .input
        input.input-card(placeholder='Number',value!='<%= card %>')
        input.input-pass(type='password', placeholder='Password',value!='<%= pass %>')
      .control
        span.message
        span.button
          icon.button.icon-remove

  .wrapper
    h1#title Cena
    form#main-form
      ul#form-list
        li.control-item.button.add
          span Add a new line
          icon.icon-add
        li.card-list-item
          ul#card-list
        li.control-item.button.start
          span Start
          icon.icon-tick

  .footer
    a(href='https://github.com/RixTox/cena/releases/tag/0.1.0', target='_blank')
      | Desktop Version Available!
      img.new(src='img/new.png')

  .github-fork-ribbon-wrapper.right
    .github-fork-ribbon
      a(href='https://github.com/RixTox/cena', target='_blank') View on GitHub

block scripts
  script(src='scripts/main.js')